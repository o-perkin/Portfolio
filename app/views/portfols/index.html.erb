<h1>Portfolio Page</h1>

<%= link_to "Create new Portfolio", new_portfol_path %>

<% @portfolio_items.each do |portfolio_item| %>
  <p><%= link_to portfolio_item.title, portfol_path(portfolio_item) %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfol_path(portfolio_item) %>
  <%= link_to 'Delete Portfolio Item', portfol_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
